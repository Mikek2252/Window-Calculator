<div class="flex flex-col" ...attributes>
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <h2 class="flex-auto text-xl font-semibold mb-5">
        Dimensions List (debugging table)
      </h2>
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Value</th>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {{#each @dimensions as |dimension|}}
              <tr data-test-dimension-row={{dimension.name}}>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500" data-test-dimension-name>{{dimension.name}}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500" data-test-dimension-value>{{dimension.value}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
