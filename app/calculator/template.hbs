<div>
  <label>Height(mm)</label>
  <Input
    @id="height"
    @value={{this.height}}
  />
  <label>Width(mm)</label>
  <Input
    @id="width"
    @value={{this.width}}
  />
  <button {{on "click" this.calculate}}>Calculate</button>
</div>

{{#if this.components.length}}
  <table>
    <tr>
      <th>Name</th>
      <th>Height</th>
      <th>Width</th>
      <th>Depth</th>
      <th>Count</th>
    </tr>

    {{#each this.components as |component|}}
      <tr>
        <td>{{component.name}}</td>
        <td class="{{if (eq component.lengthKey "height") "highlight" }}">{{component.height}}</td>
        <td class="{{if (eq component.lengthKey "width") "highlight" }}">{{component.width}}</td>
        <td class="{{if (eq component.lengthKey "depth") "highlight" }}">{{component.depth}}</td>
        <td>{{component.count}}</td>
      </tr>
    {{/each}}
  </table>
{{/if}}
